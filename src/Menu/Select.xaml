<Page x:Name="SelectPage" x:Class="Starcraft_BO_helper.Select"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Starcraft_BO_helper"
      mc:Ignorable="d"
      Title="Select" Background="#FF474747" Height="564" Width="960">

    <DockPanel x:Name="dockPanel" Height="{Binding WindowHeight, ElementName=SelectPage}" LastChildFill="False" Width="{Binding WindowHeight, ElementName=SelectPage}">
        <TabPanel x:Name="tabPanel" Width="259" Margin="5,10,0,10" HorizontalAlignment="Left" Height="{Binding ActualHeight, ElementName=dockPanel}">
            <TabControl x:Name="tabControl" Background="{x:Null}" BorderBrush="{x:Null}" Margin="0,0,0,-2" RenderTransformOrigin="0.5,0.5" HorizontalContentAlignment="Center" VerticalContentAlignment="Top" HorizontalAlignment="Left" Height="{Binding ActualHeight, ElementName=tabPanel}">
                <TabControl.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform AngleY="0.361"/>
                        <RotateTransform/>
                        <TranslateTransform Y="0.744"/>
                    </TransformGroup>
                </TabControl.RenderTransform>
                <TabItem x:Name="allTab" Header="All" BorderBrush="#FF363636" IsSelected="True" Margin="0,0,-21.75,0" FontSize="14">
                    <TabItem.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FFE8E8E8" Offset="0"/>
                            <GradientStop Color="#FF727272" Offset="1"/>
                        </LinearGradientBrush>
                    </TabItem.Background>
                    <ListBox x:Name="allList" Width="219" Margin="0,1,0,20" Background="#FF7C7C7C" BorderBrush="#FF272727" MinHeight="400" HorizontalAlignment="Left" VerticalAlignment="Top" VerticalContentAlignment="Center" Height="{Binding ActualHeight, ElementName=tabControl}" ScrollViewer.VerticalScrollBarVisibility="Auto"/>
                </TabItem>
                <TabItem x:Name="zergTab" Header="Zerg" BorderBrush="#FF363636" Margin="20.5,0,-38,0" FontSize="14">
                    <TabItem.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FFE8E8E8" Offset="0"/>
                            <GradientStop Color="#FF727272" Offset="1"/>
                        </LinearGradientBrush>
                    </TabItem.Background>
                    <ListBox x:Name="zergList" Width="219" Margin="0,1,0,20" Background="#FF7C7C7C" BorderBrush="#FF272727" MinHeight="400" HorizontalAlignment="Left" VerticalAlignment="Top" VerticalContentAlignment="Center" Height="{Binding ActualHeight, ElementName=tabControl}" ScrollViewer.VerticalScrollBarVisibility="Auto"/>
                </TabItem>
                <TabItem x:Name="terranTab" Header="Terran" Margin="36.5,0,-42.5,0" BorderBrush="#FF363636" FontSize="14" >
                    <TabItem.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FFE8E8E8" Offset="0"/>
                            <GradientStop Color="#FF727272" Offset="1"/>
                        </LinearGradientBrush>
                    </TabItem.Background>
                    <ListBox x:Name="terranList" Width="219" Margin="0,1,0,20" Background="#FF7C7C7C" BorderBrush="#FF272727" MinHeight="400" HorizontalAlignment="Left" VerticalAlignment="Top" VerticalContentAlignment="Center" Height="{Binding ActualHeight, ElementName=tabControl}" ScrollViewer.VerticalScrollBarVisibility="Auto"/>
                </TabItem>
                <TabItem x:Name="protossTab" Header="Protoss" Margin="41,0,-45,0" BorderBrush="#FF363636" FontSize="14">
                    <TabItem.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FFE8E8E8" Offset="0"/>
                            <GradientStop Color="#FF727272" Offset="1"/>
                        </LinearGradientBrush>
                    </TabItem.Background>
                    <ListBox x:Name="protossList" Width="219" Margin="0,1,0,20" Background="#FF7C7C7C" BorderBrush="#FF272727" MinHeight="400" HorizontalAlignment="Left" VerticalAlignment="Top" VerticalContentAlignment="Center" Height="{Binding ActualHeight, ElementName=tabControl}" ScrollViewer.VerticalScrollBarVisibility="Auto"/>
                </TabItem>
            </TabControl>
        </TabPanel>
        <Canvas x:Name="canvas" Margin="-28.5,10,10,10" DockPanel.Dock="Top" VerticalAlignment="Top" Height="544">
            <StackPanel Margin="0" Canvas.Top="155.5" Height="241" VerticalAlignment="Top" Width="{Binding ActualWidth, ElementName=canvas}">

                <Button Content="Play" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center" Height="45.94" Margin="0,30,0,0" Width="135.44" Background="#FF252525" Foreground="White" BorderBrush="Black" Click="playSelected"/>
                <Button Content="Delete" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center" Height="45.94" Margin="0,40,0,0" Width="135.44" Background="#FF252525" Foreground="White" BorderBrush="Black" Click="deleteSelected"/>
            </StackPanel>
            <Button Content="🡄" FontSize="22" HorizontalAlignment="Center" VerticalAlignment="Center" Height="42.94" Width="46.94" Background="#FF252525" Foreground="White" BorderBrush="Black" Click="backMenu" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        </Canvas>
    </DockPanel>
</Page>
